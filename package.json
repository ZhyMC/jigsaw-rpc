{
  "name": "jigsaw-rpc",
  "version": "0.0.7",
  "description": "jigsaw-rpc is a RPC framework under Node.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "mocha",
    "build": "tsc",
    "prepare": "npm run build",
    "test-cov": "nyc --reporter=lcov npm test",
    "dev": "nodemon --watch ./src/ --watch ./examples/ -e ts --exec \"ts-node ./examples/test-app.ts\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZhyMC/jigsaw-rpc.git"
  },
  "keywords": [
    "rpc",
    "http",
    "client",
    "tcp",
    "udp",
    "remote",
    "call",
    "framework",
    "json-rpc",
    "jsonrpc",
    "jsonrpc2",
    "web"
  ],
  "author": "zhymc",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/ZhyMC/jigsaw-rpc/issues"
  },
  "homepage": "https://github.com/ZhyMC/jigsaw-rpc#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.25",
    "cz-conventional-changelog": "^3.3.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "debug": "^4.2.0",
    "tiny-typed-emitter": "^2.0.3"
  }
}
